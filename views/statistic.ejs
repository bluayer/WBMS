            "data": [21, 25, 27, 29, 31, 30, 22],
            "fill": false,
            "borderColor": "red",
            "lineTension": 0.1
          }]
        },
        "options": {
          title: {
            display: true,
            text: `Waggle in ${city}`
          },
          responsive: true,
          maintainAspectRatio: false
        }
      });
    </script>
